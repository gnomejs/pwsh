{
    "name": "@gnome/pwsh",
    "version": "0.0.0",
    "exports": {
        ".": "./mod.ts",
        "./pwsh": "./pwsh.ts"
    },
    "compilerOptions": {
        "lib": ["deno.worker"]
    },
    "fmt": {
        "indentWidth": 4,
        "useTabs": false,
        "lineWidth": 120,
        "exclude": ["**/*.md"]
    },

    "tasks": {
        "test": "deno test -A",
        "coverage": "deno test --coverage=.artifacts/code-coverage -A",
        "lcov": "deno coverage .artifacts/code-coverage --lcov > .artifacts/code-coverage.lcov"
    },

    "publish": {
        "include": [
            "mod.ts",
            "pwsh.ts",
            "README.md",
            "LICENSE.md",
            "deno.json"
        ]
    },
    "imports": { "@gnome/exec": "jsr:@gnome/exec@^0.4.1" }
}
